<h2>Edit boat</h2>
<%= form_for @boat do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "Upload an image" %>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>
  <div class="class">
    <%= f.label :cargo %>
    <%= f.number_field :cargo %>
  </div>
  <%= f.submit "Update" %>
<% end %>