<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Cargo</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @boats.each do |b| %>
    <tr>
        <td><%= b.name %></td>
        <td><%= b.capacity %></td>
        <td><%= b.cargo %></td>
        <td><%= b.location %></td>
    </tr>
    <% end %>
  </tbody>
</table>
