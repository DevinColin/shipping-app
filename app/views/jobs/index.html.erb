<h2>Open jobs</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Job number</th>
			<th>Date created</th>
			<th>Origin</th>
			<th>Destination</th>
			<th>Price</th>
			<th>Number of Containers</th>
			<th>Boat(s) assigned</th>
		</tr>
	</thead>
	<tbody>
		<% @newjobs.each do |job| %>
			<tr>
				<td><%= link_to job.id, job %></td>
				<td><%= job.created_at %></td>
				<td><%= job.origin %></td>
				<td><%= job.destination %></td>
				<td><%= job.cost %></td>
				<td><%= job.amount %></td>
				<td><% job.boats.each do |boat| %><%= boat.name %>\n<% end %></td>
			</tr>
		<% end %>
	</tbody>
</table>

